# Terminal colors {{{
Term colors: t_black t_red t_green yellow t_blue t_magenta t_blue t_white
Term colors: t_black_b t_red_b t_green_b yellow
Term colors: t_blue_b t_magenta_b lightblue t_white_b
# }}}

# Default highlight groups {{{
Variant: gui
#if get(g:, '@optionprefix_transp_bg', 0) && !has('gui_running')
Variant: 256 8
#if get(g:, '@optionprefix_transp_bg', 0)
Variant: gui 256 8
    Normal           lightyellow       none
    Terminal         lightyellow       none
#else
    Normal           lightyellow       black
    Terminal         lightyellow       black
#endif

